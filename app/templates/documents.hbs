<h4>Documents</h4>
{{#if isCreatingDocument}}
  <button class="btn btn-primary" disabled>Creating...</button>
{{else}}
  <button class="btn btn-primary" {{action 'newDocument'}}>New Document</button>
{{/if}}

<div class="list-group">
  {{#each}}
    {{#link-to 'document' this class="list-group-item"}}
      {{name}} <span class="pull-right text-muted">{{format-date createdAt}}</span>
    {{/link-to}}
  {{/each}}
</div>