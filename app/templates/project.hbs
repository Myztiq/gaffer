{{partial 'project-delete-modal'}}
<div class="row header">
  <div class="col col-xs-6">
    <h3>
      {{#if isEditing}}
        <div class="form">
          <div class="form-group">
            {{input class='form-control' type='text' value=name}}
          </div>
        </div>
      {{else}}
        {{name}} <span class="text-muted"><small>{{format-date createdAt}}</small></span>
      {{/if}}
    </h3>
  </div>
  <div class="col col-xs-6">
    <h3>
      {{#if isSaving}}
        <button class="btn btn-primary btn-sm pull-right" disabled>Saving</button>
      {{else}}
        {{#if isEditing}}
          <button class="btn btn-primary btn-sm pull-right" {{action 'doneEdit'}}>Save</button>
        {{else}}
          <button class="btn btn-danger btn-sm pull-right" data-toggle="modal" data-target="#myModal">Delete</button>
          <button class="btn btn-default btn-sm pull-right" {{action 'edit'}}>Edit</button>
        {{/if}}
      {{/if}}
      <div class="clearfix"></div>
    </h3>
  </div>
</div>
<div class="row">
  <div class="col col-sm-6">
    <h4>Details</h4>
    <div class="row">
      <div class="col-sm-4">
        <p>
          <strong>color:</strong>
        </p>
      </div>
      <div class="col-sm-8">
        <div class="color wide" {{bind-attr style='backgroundStyle'}}>
          {{color}}
        </div>
          {{#if isEditing}}
            <div class="colors-list">
              {{#each colors}}
                <div class="color" {{action 'changeColor' this}} style="cursor: pointer; background-color:#{{this}}"></div>
              {{/each}}
              <div class="clear"></div>
            </div>
          {{/if}}
      </div>
    </div>
    <div class="row">
    	<div class="col-sm-4">
        <p>
          <strong>link:</strong>
        </p>
    	</div>
      <div class="col-sm-8">
        {{#if isEditing}}
          <div class="form">
            <div class="form-group">
              {{input class='form-control' type='url' value=url}}
            </div>
          </div>
        {{else}}
          <p>
            <a {{bind-attr href='url'}} target='_blank'>{{url}}</a>
          </p>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <p>
          <strong>Description:</strong>
        </p>
      </div>
      <div class="col-sm-8">
        {{#if isEditing}}
          <div class="form">
            <div class="form-group">
              {{textarea class='form-control' type='text' value=description}}
            </div>
          </div>
        {{else}}
          <p>
            {{description}}
          </p>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    {{outlet}}
  </div>
</div>
