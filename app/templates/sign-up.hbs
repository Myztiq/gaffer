<div class="panel panel-default">
  <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Sign Up</div>
  <div class="panel-body">
    <form class="form-horizontal" role="form" {{bind-attr class="showErrors:showErrors:hideErrors"}}>
      <div class="form-group">
        <label class="col-sm-4 control-label" for="firstName">first name</label>
        <div class="col-sm-8" {{bind-attr class="errors.firstName.length:error"}}>
          {{input class='form-control' type='text' value=firstName placeholder='first name'}}
          <div class="error-helper alert alert-danger">
            {{errors.firstName}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label" for="lastName">last name</label>
        <div class="col-sm-8">
          {{input class='form-control' type='text' valueBinding='lastName' placeholder='last name'}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label" for="email">email</label>
        <div class="col-sm-8">
          {{input class='form-control' type='email' valueBinding='email' placeholder='email'}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label" for="password">password</label>
        <div class="col-sm-8">
          {{input class='form-control' type='password' valueBinding='password' placeholder='password'}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-primary btn-block" {{action 'create'}}>Sign Up <span class="glyphicon glyphicon-user"></span></button>
        </div>
      </div>
    </form>
  </div>
</div>