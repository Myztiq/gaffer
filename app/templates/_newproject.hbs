<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="projectname" class="col-sm-2 control-label">Project Name</label>
    <div class="col-sm-10">
      {{input class="form-control" type='text' value=name placeholder="project name"}}
    </div>
  </div>
  <div class="form-group">
    <label for="projecturl" class="col-sm-2 control-label">Project URL</label>
    <div class="col-sm-10">
      {{input class="form-control" type='url' value=url placeholder="project url"}}
    </div>
  </div>
  <div class="form-group">
    <label for="prjectname" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{textarea class="form-control" type='text' value=description placeholder="description"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      {{#if creating}}
        <button class="btn btn-primary" disabled>Saving</button>
      {{else}}
        <button {{action 'add'}} class="btn btn-primary">Save</button>
        {{#if length}}
          <button {{action 'cancel'}} class="btn btn-primary">Cancel</button>
        {{/if}}
      {{/if}}
      </div>
    </div>
</form>